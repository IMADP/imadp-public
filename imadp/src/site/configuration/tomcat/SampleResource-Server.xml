<Resource 
	name="jdbc/[DATABASE]" 
	scope="Shareable" 
	factory="org.apache.naming.factory.BeanFactory" 
	type="com.mchange.v2.c3p0.ComboPooledDataSource" 
	user="[USERNAME]" 
	password="[PASSWORD]" 
	driverClass="com.mysql.jdbc.Driver" 
	jdbcUrl="jdbc:mysql://localhost:3306/[DATABASE]"
	auth="Container" 
	acquireIncrement="5"
	initialPoolSize="5"
	minPoolSize="5"
	maxPoolSize="100"
	maxIdleTime="10"
	numHelperThreads="6" />